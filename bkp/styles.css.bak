/* Custom CSS for specific tweaks */

html {
    scroll-behavior: smooth;
}

/* Logo Styling for Navbar */
.navbar-logo {
    height: 50px; /* Default size for larger screens */
    max-height: 10vh; /* Responsive resizing */
    object-fit: contain; /* Maintain aspect ratio */
    margin-right: 10px;
}

/* Align logo and text in the navbar */
.navbar-brand {
    display: flex;
    align-items: center; /* Vertical alignment */
    gap: 10px; /* Space between logo and text */
}

.navbar-logo {
    height: 50px; /* Adjust logo size */
    max-height: 10vh; /* Responsive resizing */
    object-fit: contain; /* Maintain aspect ratio */
}

.navbar-text {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.2rem; /* Adjust text size */
    font-weight: bold;
    color: #FF9933; /* Saffron color for emphasis */
}


/* Responsive Adjustments */
@media (max-width: 992px) {
    .navbar-logo {
        height: 40px; /* Reduce size for medium screens */
    }
}

@media (max-width: 768px) {
    .navbar-logo {
        height: 30px; /* Smaller size for mobile screens */
    }
}

@media (max-width: 576px) {
    .navbar-logo {
        height: 25px; /* Further reduce size for extra small screens */
    }
}


/* Navigation Bar Styling */
.navbar {
    font-family: 'Montserrat', sans-serif;
    font-size: 1rem;
    background-color: #FFFFFF;
    border-bottom: 2px solid #FF9933;
}

.navbar-brand span {
    font-size: 1.5rem;
}

.nav-link {
    transition: color 0.3s ease;
}

.nav-link:hover {
    color: #FF9933;
    text-decoration: underline;
}

.nav-link.active {
    color: #FF9933 !important;
    font-weight: bold;
    border-bottom: 2px solid #FF9933;
}

.btn-outline-primary {
    border-color: #FF9933;
    color: #FF9933;
    transition: all 0.3s ease;
}

.btn-outline-primary:hover {
    background-color: #FF9933;
    color: #FFFFFF;
}

.dropdown-menu {
    min-width: 150px;
}

.sticky-top {
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    z-index: 1050;
}

/* Scroll Progress Bar */
.progress-bar-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    z-index: 1030;
    background: rgba(255, 153, 51, 0.1);
}

.progress-bar {
    width: 0%;
    height: 100%;
    background: #FF9933;
    transition: width 0.1s ease-out;
}

/* Back-to-Top Button */
#back-to-top {
    position: fixed;
    bottom: 20px;
    right: 20px;
    display: none;
    width: 50px;
    height: 50px;
    background-color: #FF9933;
    color: white;
    border: none;
    cursor: pointer;
    z-index: 1030;
    font-size: 20px;
    justify-content: center;
    align-items: center;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    transition: opacity 0.3s ease, transform 0.3s ease;
}

#back-to-top:hover {
    background-color: #CC7A29;
}


/* Hero Section Styling */
.hero {
    background: linear-gradient(rgba(255, 153, 51, 0.9), rgba(255, 153, 51, 0.9)), url('hero-bg.jpg') center/cover no-repeat;
    color: white;
    padding: 100px 0;
    position: relative;
    text-align: center;
}

.hero .container {
    position: relative;
    z-index: 2;
}

.hero-title {
    font-family: 'Montserrat', sans-serif;
    font-size: 3rem;
    font-weight: bold;
    margin-bottom: 20px;
}

.hero-title .highlight {
    color: #28A745; /* Green for emphasis */
}

.hero-subtitle {
    font-family: 'Roboto', sans-serif;
    font-size: 1.2rem;
    margin-bottom: 30px;
}

.hero-buttons .btn-primary {
    background-color: #FF9933;
    border-color: #FF9933;
    color: white;
    font-weight: bold;
    transition: background-color 0.3s ease, border-color 0.3s ease;
}

.hero-buttons .btn-primary:hover {
    background-color: #CC7A29;
    border-color: #CC7A29;
}

.hero-buttons .btn-outline-light {
    border-color: white;
    color: white;
    font-weight: bold;
    transition: background-color 0.3s ease, color 0.3s ease;
}

.hero-buttons .btn-outline-light:hover {
    background-color: white;
    color: #FF9933;
}

.hero-image {
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    .hero-title {
        font-size: 2.5rem;
    }

    .hero-buttons .btn-lg {
        font-size: 1rem;
    }

    .hero-image {
        margin-top: 20px;
    }
}






/* About Section */
.about-section {
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.9), rgba(240, 240, 240, 0.9)), url('background-pattern.jpg') center/cover fixed;
    color: #333;
}

.about-section h2 {
    font-family: 'Montserrat', sans-serif;
    color: #FF9933;
    font-size: 2.5rem;
    margin-bottom: 20px;
}

.about-section h3 {
    font-family: 'Roboto', sans-serif;
    color: #28A745;
    font-size: 1.8rem;
}

.about-section p {
    font-family: 'Roboto', sans-serif;
    font-size: 1rem;
    line-height: 1.8;
}

/* Personal Details */
.personal-details {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.personal-details h4 {
    color: #FF9933;
}

.personal-details p {
    font-size: 1rem;
    margin-bottom: 15px;
}

/* Horizontal Timeline */
.timeline-horizontal {
    display: flex;
    justify-content: space-between;
    gap: 15px;
    padding: 20px;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.timeline-card {
    background: #f9f9f9;
    padding: 15px;
    border-radius: 10px;
    flex: 1;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
}

.timeline-date {
    color: #FF9933;
    font-weight: bold;
    font-size: 1.2rem;
}

.timeline-card p {
    font-size: 0.9rem;
    line-height: 1.5;
}



/* Personal Details */
.personal-details .card {
    border: none;
    background: #fff;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s;
}

.personal-details .card:hover {
    transform: scale(1.05);
}

/* Timeline */
.timeline-section {
    background: #f9f9f9;
    padding: 20px;
    border-radius: 10px;
}

.timeline {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.timeline-item {
    display: flex;
    align-items: center;
    gap: 20px;
    background: #fff;
    padding: 15px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.timeline-item .timeline-icon {
    font-size: 2rem;
    color: #FF9933;
}

.timeline-item .timeline-content {
    flex-grow: 1;
}

.timeline-item h5 {
    margin: 0;
    font-weight: bold;
    color: #FF9933;
}

.timeline-item p {
    margin: 0;
    color: #555;
}




/* Achievements Section */

.achievements-section {
    background: linear-gradient(to bottom, rgba(255, 255, 255, 0.9), rgba(240, 240, 240, 0.9)), url('background-pattern.jpg') center/cover fixed;
    color: #333;
}

.achievements-section h2 {
    font-family: 'Montserrat', sans-serif;
    color: #FF9933;
    font-size: 2.5rem;
    margin-bottom: 20px;
}

.achievements-section h3 {
    font-family: 'Roboto', sans-serif;
    color: #28A745;
    font-size: 1.8rem;
}

.achievements-section p {
    font-family: 'Roboto', sans-serif;
    font-size: 1rem;
    line-height: 1.8;
}

.achievement-card {
    background: #fff;
    padding: 20px;
    border-radius: 15px;
    text-align: center;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.achievement-card:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.15);
}

.achievement-card .icon {
    font-size: 3rem;
    margin-bottom: 15px;
}

.achievement-card h5 {
    font-size: 1.2rem;
    font-weight: bold;
    color: #333;
}

.achievement-card p {
    font-size: 0.9rem;
    line-height: 1.5;
    color: #555;
}





